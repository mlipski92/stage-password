<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Mlipski_StagePassword::css/stagepasswordStyles.css"/>
    </head>
    <body>
        <referenceContainer name="after.body.start">
            <block class="Magento\Framework\View\Element\Template" name="post_index_index" template="Mlipski_StagePassword::index.phtml"/>
        </referenceContainer>
        <referenceContainer name="header.container" remove="true"/>
        <referenceContainer name="footer" remove="true"/>
        <referenceContainer name="before.body.end">
            <referenceBlock name="absolute_footer" remove="true" />
        </referenceContainer>
    </body>
</page>
